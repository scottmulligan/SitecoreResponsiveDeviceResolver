<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    
    <pipelines>
      <httpRequestBegin>
        <processor patch:after="*[@type='Sitecore.Pipelines.HttpRequest.ItemResolver, Sitecore.Kernel']" type="Modules.Pipelines.HttpRequest.ResponsiveDeviceResolver, ResponsiveDeviceResolver" />
      </httpRequestBegin>  
    </pipelines>

    <settings>
      <!--The name of the cookie containing the resolution value-->
      <setting name="RDR_cookieName" value="RDRresolution"/>
    </settings>
    
  </sitecore>
</configuration>